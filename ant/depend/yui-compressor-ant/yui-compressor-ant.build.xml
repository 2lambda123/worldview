<?xml version="1.0"?>
<project name="yui-compressor-ant" basedir="." default="resolve">

	<dirname property="yui-compressor-ant.basedir" file="${ant.file.yui-compressor-ant}"/>
	<property file="${yui-compressor-ant.basedir}/build.properties"/>
	
	<target name="resolve" depends="download,unpack"/>
	
	<target name="download">
		<get src="${yui-compressor-ant.url}" dest="${lib.artifacts.dir}" 
			 skipexisting="true"/>
	</target>
		
	<target name="check-package">
		<available file="${yui-compressor-ant.package.dir}" 
		           property="yui-compressor-ant.available"/>
	</target>
		
	<target name="unpack" depends="check-package" 
	        unless="yui-compressor-ant.available">
		<unzip src="${lib.artifacts.dir}/${yui-compressor-ant.artifact}" 
			   dest="${lib.packages.dir}/${yui-compressor-ant.package}"/>
	</target>
		
</project>