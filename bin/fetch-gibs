# Administrator of the National Aeronautics and Space Administration.
# All Rights Reserved.
#

BASEDIR=$(dirname "$0")
[ "DESTDIR" ]  || DESTDIR="$BASEDIR"/../build/gc
[ "$GIBS_URL" ] || BASEURL="http://map1.vis.earthdata.nasa.gov"

mkdir -p $DESTDIR
curl "$BASEURL"/wmts-geo/wmts.cgi?request=GetCapabilities \
    > $DESTDIR/gibs-geographic.xml
curl "$BASEURL"/wmts-arctic/wmts.cgi?request=GetCapabilities \
    > $DESTDIR/gibs-arctic.xml
curl "$BASEURL"/wmts-antarctic/wmts.cgi?request=GetCapabilities \
    > $DESTDIR/gibs-antarctic.xml



